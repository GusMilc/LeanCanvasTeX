\newcommand{\printLeanCanvas}[1]{
    \printLCProblem \\
    \printLCExistingAlternatives \\
    \printLCSolution \\
    \printLCKeyMetrics \\
    \printLCUniqueValueProposition \\
    \printLCHighlevelConcept \\
    \printLCUnfairAdvantage \\
    \printLCChannels \\
    \printLCCustomerSegments \\
    \printLCEarlyAdopters \\
    \printLCCostStructure \\
    \printLCRevenueStream \\
}

% ==================== \LeanCanvasTeX =====================
\makeatletter
\define@key{mykeys}{problem}{\def\myCommand@problem{#1}}  
\define@key{mykeys}{existing alternatives}{\def\myCommand@existingAlternatives{#1}} 
\define@key{mykeys}{solution}{\def\myCommand@solution{#1}} 
\define@key{mykeys}{key metrics}{\def\myCommand@keyMetrics{#1}} 
\define@key{mykeys}{unique value proposition}{\def\myCommand@uniqueValueProposition{#1}} 
\define@key{mykeys}{high-level concept}{\def\myCommand@highlevelConcept{#1}} 
\define@key{mykeys}{unfair advantage}{\def\myCommand@unfairAdvantage{#1}} 
\define@key{mykeys}{channels}{\def\myCommand@channels{#1}} 
\define@key{mykeys}{customer segments}{\def\myCommand@customerSegments{#1}} 
\define@key{mykeys}{early adopters}{\def\myCommand@earlyAdopters{#1}} 
\define@key{mykeys}{cost structure}{\def\myCommand@costStructure{#1}} 
\define@key{mykeys}{revenue streams}{\def\myCommand@revenueStreams{#1}} 
\newcommand{\LeanCanvasTeX}[1]{
  \setkeys{mykeys}{
        problem = ,
        existing alternatives = ,
        solution = ,
        key metrics = ,
        unique value proposition = ,
        high-level concept = ,
        unfair advantage = ,
        channels = ,
        customer segments = ,
        early adopters = ,
        cost structure = ,
        revenue streams = 
        #1
    }          
                                                        
  \setLCProblem{\myCommand@problem}    
  \setLCExistingAlternatives{\myCommand@existingAlternatives}
  \setLCSolution{\myCommand@solution}
  \setLCKeyMetrics{\myCommand@keyMetrics}
  \setLCUniqueValueProposition{\myCommand@uniqueValueProposition}
  \setLCHighlevelConcept{\myCommand@highlevelConcept}
  \setLCUnfairAdvantage{\myCommand@unfairAdvantage}
  \setLCChannels{\myCommand@channels}
  \setLCCustomerSegments{\myCommand@customerSegments}
  \setLCEarlyAdopters{\myCommand@earlyAdopters}
  \setLCCostStructure{\myCommand@costStructure}
  \setLCRevenueStreams{\myCommand@revenueStreams}                   
                                                        
  \printLeanCanvas                                         
}                                                          
\makeatother                                               
